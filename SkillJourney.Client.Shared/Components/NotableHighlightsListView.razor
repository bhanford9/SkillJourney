@using SkillJourney.ViewModels.NotableHighlights
@inherits ComponentBase
@inject IDialogService DialogService

<MudContainer MaxWidth="@MaxWidth.Medium">
    <MudDataGrid Items="@ViewModel.NotableHighlights"
                 Dense="true"
                 MultiSelection="true"
                 Filterable="true"
                 Hideable="true"
                 Groupable="true"
                 ShowMenuIcon="true">
        <ToolBarContent>
            <MudText Typo="Typo.h6">Notable Highlights</MudText>
            <MudSpacer />
        </ToolBarContent>
        <Columns>
            <PropertyColumn Property="@(x => x.DateOfOccurrence.ToString("M/dd/yyyy"))" Groupable="false" Title="Date of Occurrence" />
            <PropertyColumn Property="x => x.SignificanceRating" Title="Significance Rating" />
            <PropertyColumn Property="x => x.Description" Groupable="false" />
            <PropertyColumn Property="x => x.RelatedSkillsRollup" Title="Related Skills" />
        </Columns>
    </MudDataGrid>
</MudContainer>

<MudTooltip Text="Add Highlight" Placement="Placement.Top">
    <MudFab Color="Color.Primary"
            StartIcon="@Icons.Material.Filled.Add"
            Size="Size.Small"
            OnClick="async () => await ViewModel.CreateNewHighlight(typeof(NotableHighlightForm))" />
</MudTooltip>
